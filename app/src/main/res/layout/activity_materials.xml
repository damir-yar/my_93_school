        app:layout_constraintTop_toTopOf="@+id/mat_oge"
        app:srcCompat="@drawable/exam" />

    <TextView
        android:id="@+id/tt2"
        android:layout_width="155dp"
        android:layout_height="31dp"
        android:layout_marginStart="48dp"
